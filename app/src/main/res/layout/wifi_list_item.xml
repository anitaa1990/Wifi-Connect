<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xsmall"
        android:layout_marginRight="@dimen/margin_xsmall"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="0.8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_xlarge">


                <com.an.customfontview.CustomTextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:textColor="@color/landing_fragment_desc"
                    android:textSize="@dimen/font_xmedium"
                    app:textFontPath="fonts/montserrat_medium.otf" />


                <com.an.customfontview.CustomTextView
                    android:id="@+id/item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_marginLeft="@dimen/margin"
                    android:textColor="@color/fragment_add_bank_desc"
                    android:textSize="@dimen/font_small"
                    app:textFontPath="fonts/montserrat_medium.otf" />

            </RelativeLayout>


            <View
                android:id="@+id/sline"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/divider_color" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>